<%= render partial: 'shared/navbar' %>

<div class="h-screen bg-gray-100">
  <div class="max-w-4xl mx-auto px-16 py-6 bg-white h-screen shadow-lg">

    <div>
      <button class="px-4 py-2 bg-red-300 text-black rounded-lg hover:bg-red-400"><%= link_to "New category", new_category_path %></button>
    </div>
    <% @categories.each do |category| %>
      <%= link_to category_path(category) do %>
        <div class="mt-8 font-[Poppins]">   
          <div class="bg-gray-200 rounded-xl shadow-2xl overflow-hidden hover:bg-red-300">
            <div class="my-9 mx-2 text-center">
              <span class="font-bold truncate"><%= category.name %></span>
            </div>
          </div>
        </div>  
      <% end %>  
    <% end %>

  </div>  
</div> 