<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="bg-gray-100 p-10 h-screen">
  <div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-lg">

    <% if @category.new_record? %>
      <h1 class="text-2xl font-semibold mb-6">Create a new category</h1>
    <% else %>
      <h1 class="text-2xl font-semibold mb-6">Update a category</h1>
    <% end %>

    <div class="mb-6">
      <%= form.label :name, class: "block text-sm font-medium mb-2 text-gray-600" %>
      <%= form.text_field :name, class: "w-full h-10 px-4 py-2 border rounded-lg", placeholder: "Enter the category name", required: true %>
    </div>

    <% if @category.new_record? %>
      <div class="text-center">
        <%= form.submit "Submit", class: "px-4 py-2 mt-10 bg-red-300 text-black rounded-lg hover:bg-red-400" %>
      </div>
    <% else %>
      <div class="flex justify-center space-x-4">
        <button type="submit" class="px-4 py-2 mt-10 bg-red-300 text-black rounded-lg hover:bg-red-400">Update</button>
      </div>
    <% end %>

  </div>
</div>  
<% end %>

