<!-- app/views/dinners/new.html.erb -->

<div class="bg-gray-100 p-10 h-screen">
    <div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-lg">
  <h1 class="text-2xl font-semibold mb-6">Create a new dinner</h1>
  <%= form_for @dinner do |f| %>
    <!-- Dinner Name -->
    <div class="mb-6">
      <%= f.label :name, 'Dinner Name:', class: 'block text-sm font-medium mb-2 text-gray-600' %>
      <%= f.text_field :name, class: 'w-full h-10 px-4 py-2 border rounded-lg', placeholder: 'Enter the dinner name', required: true %>
    </div>

    <!-- Submit Button -->
    <div class="text-center">
      <%= f.submit 'Submit', class: 'px-4 py-2 mt-10 bg-red-300 text-black rounded-lg hover:bg-red-400' %>
    </div>
  <% end %>
</div>
</div>
