<%= render partial: 'shared/navbar' %>

<div class="h-screen bg-gray-100">
<div class="max-w-4xl mx-auto px-16 py-6 bg-white h-screen shadow-lg">

    <div>
      <button class="px-4 py-2 bg-red-300 text-black rounded-lg hover:bg-red-400"><%= link_to "New dinner", new_dinner_path %></button>
    </div>
  <div class="mt-8 grid lg:grid-cols-3 md:grid-cols-2 gap-10 font-[Poppins]"> 

  <% @dinners.each do |dinner| %>
    <%= link_to dinner_path(dinner) do %>
    <div class="bg-gray-200 rounded-xl shadow-2xl overflow-hidden hover:bg-red-300"> 
      <div class="my-9 mx-2 text-center">
        <p class="font-bold text-center truncate"><%= dinner.name %></p>
      </div>
    </div>
    <% end %>
  <% end %>

  </div>  
</div>  