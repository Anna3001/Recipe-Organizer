<%= render partial: 'shared/navbar' %>
<html lang="en">

<div class="bg-gray-100 p-10">
    <div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-lg">

        <img src="https://images.pexels.com/photos/1247677/pexels-photo-1247677.jpeg?auto=compress&cs=tinysrgb&w=1600" alt="Recipe Image" class="w-full h-auto mb-4 rounded-lg">
        <h1 class="text-2xl font-semibold mb-6"><%= @recipe.name %></h1>

        <!-- Ingredients -->
        <div class="mb-6">
            <label for="ingredients" class="block text-lg font-medium font-semibold mb-2 text-gray-600">Ingredients:</label>
            <p class="whitespace-pre-wrap"><%= @recipe.ingredients %></p>
        </div>

        <!-- Instructions -->
        <div class="mb-6">
            <label for="instructions" class="block font-medium mb-2 text-lg font-semibold text-gray-600">Instructions:</label>
            <p class="whitespace-pre-wrap"><%= @recipe.instructions %></p>
        </div>

        <!-- Buttons -->
        <div class="flex mt-20 justify-end space-x-4">
            <%= link_to "Edit", edit_recipe_path(@recipe), class: "px-4 py-2 bg-red-300 text-black rounded-lg hover:bg-red-400" %>
            <%= button_to "Delete", @recipe, method: :delete, class: "px-4 py-2 bg-red-300 text-black rounded-lg hover:bg-red-400" %>
            <%= link_to "Back", recipes_path, class: "px-4 py-2 bg-red-300 text-black rounded-lg hover:bg-red-400" %>
        </div>
    </div>
</div>

