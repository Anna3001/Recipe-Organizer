<div class="bg-cover bg-center flex items-center justify-center h-screen relative">
  <!-- Background Image -->
  <img src="/home_photo.jpg"
    alt="Background Image" class="w-full h-full object-cover z-0 absolute">

  <!-- Login Form Container -->
  <div class="container mx-auto z-10">
    <div class="max-w-md mx-auto my-10">
      <div class="text-center">
        <h1 class="my-3 text-5xl font-semibold text-white">Sign in</h1>
      </div>
      <div class="m-7">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
          <div class="mb-6">
            <%= f.label :email, class: 'block mb-2 text-sm font-medium text-gray-300' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: 'w-full px-4 py-2 placeholder-gray-300 border rounded-md bg-gray-100 bg-gray-300 dark:text-white dark:placeholder-gray-500 dark:border-gray-300 dark:focus:ring-gray-900 dark:focus:border-gray-500' %>
          </div>
          <div class="mb-6">
            <div class="flex justify-between mb-2">
              <%= f.label :password, class: 'text-sm font-medium text-gray-300' %>
              <%= link_to 'Forgot password?', new_password_path(resource_name), class: 'text-sm text-gray-300 focus:outline-none hover:text-red-300' %>
            </div>
            <%= f.password_field :password, autocomplete: "current-password",
              class: 'w-full px-4 py-2 placeholder-gray-300 border rounded-md bg-gray-100 bg-gray-300 dark:text-white dark:placeholder-gray-500 dark:border-gray-300 dark:focus:ring-gray-900 dark:focus:border-gray-500' %>
          </div>
          <div class="mb-6">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: 'text-sm font-medium text-gray-300' %>
              </div>
            <% end %>
          </div>
          <div class="mb-6">
            <%= f.submit "Log in", class: 'w-full px-4 py-2 text-black bg-red-300 hover:bg-red-400 rounded-md transition duration-300 ease-in-out' %>
          </div>
        <% end %>
        <p class="text-lg text-center text-gray-300">Don't have an account yet? <%= link_to 'Sign up', new_registration_path(resource_name), class: 'text-red-300 focus:outline-none focus:underline' %>.</p>
      </div>
    </div>
  </div>
</div>
