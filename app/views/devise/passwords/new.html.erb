<div class="bg-cover bg-center flex items-center justify-center h-screen relative">
    <!-- Background Image -->
    <img src="/home_photo.jpg"
        alt="Background Image" class="w-full h-full object-cover z-0 absolute">

    <!-- Password Reset Form Container -->
    <div class="container mx-auto z-10">
        <div class="max-w-md mx-auto my-10">
            <div class="text-center">
                <h1 class="my-4 text-5xl font-semibold text-white">Forgot your password?</h1>
            </div>
            <div class="m-7">
                <%= form_tag(password_path(resource_name), method: :post, class: 'form') do %>
                    <%= render 'devise/shared/error_messages', resource: resource %>

                    <div class="mb-6">
                        <%= label_tag :email, 'Email address', class: 'block mb-2 text-sm font-medium text-gray-400' %>
                        <%= email_field_tag :email, nil, autofocus: true, autocomplete: 'email', class: 'w-full px-4 py-2 placeholder-gray-300 border rounded-md bg-gray-100 bg-gray-300 dark:text-white dark:placeholder-gray-500 dark:border-gray-300 dark:focus:ring-gray-900 dark:focus:border-gray-500' %>
                    </div>

                    <div class="mb-6">
                        <%= label_tag :email, 'Email address', class: 'invisible block mb-2 text-sm font-medium text-gray-400' %>
                        <%= submit_tag 'Send me reset password instructions', class: 'w-full px-4 py-2 text-black bg-red-300 hover:bg-red-400 rounded-md transition duration-300 ease-in-out' %>
                    </div>
                <% end %>

                <%= render 'devise/shared/links' %>
            </div>
        </div>
    </div>
</div>
